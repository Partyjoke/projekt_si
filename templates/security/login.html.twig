{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post" class="form-horizontal">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'action_security'|trans) }}</div>
        {% endif %}

        {% if app.user %}
            <div class="content">

                {{ 'label_logged_in_as'|trans }} {{ app.user.username }}

            </div>
            <div class="content">
                <a href="{{ path('app_logout') }}">{{ 'action_logout'|trans }}</a>
            </div>
            <div class="content">
                <a href="{{ path('security_edit') }}">{{ 'action_change_password'|trans }}</a>
            </div>
        {% else %}
            <div class="container">
                <h2>{{ 'action_login'|trans }}</h2>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="inputEmail">{{ 'label_email'|trans }}</label>
                    <div class="col-sm-10">
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>            </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="inputPassword">{{ 'label_password'|trans }}</label>
                    <div class="col-sm-10">
                        <input type="password" name="password" id="inputPassword" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                </div>
            </div>
            <div class="form-group">
                <div class="form-group row float-sm-right">
                    <button type="submit" class="btn btn-default">{{ 'action_save'|trans }}</button>
                </div>
            </div>

            </div>
        {% endif %}



        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

    </form>
{% endblock %}
